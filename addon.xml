<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.mylivetv"
       name="*MyLiveTV"
       version="1.1.0"
       provider-name="Silverfox">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
	<import addon="script.module.beautifulsoup" version="3.0.8"/>
    <import addon="script.module.simple.downloader" version="0.9.1"/>
    <import addon="script.module.simplejson" />
  </requires>
  <extension point="xbmc.python.pluginsource"
            library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary>livestreams</summary>
    <description>It's up to you ;-) As an alternative to .strm files this add-on lets you add streams by adding items to an xml file. Thus giving you a 

nice list with thumbnails, fanart, and media info if you like.</description>
    <platform>all</platform>
  </extension>
  <extension point="xbmc.addon.repository" name="adultchannel Addons">
    <info compressed="false">https://github.com/Danasy/MyLiveTV/blob/MyLiveTV/addon.xml</info>
    <checksum>https://github.com/Danasy/MyLiveTV/blob/MyLiveTV/addons.xml.md5</checksum>
    <datadir zip="true">https://github.com/Danasy/MyLiveTV/blob/MyLiveTV/</datadir>
  </extension>
</addon>
